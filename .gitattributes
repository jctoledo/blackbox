# Auto detect text files and perform LF normalization
* text=auto

# Rust files
*.rs text eol=lf
*.toml text eol=lf

# Python files
*.py text eol=lf

# Markdown
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Binary files
*.bin binary
*.elf binary
*.a binary
*.so binary

# Archives
*.zip binary
*.tar binary
*.gz binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Lock files (don't normalize)
Cargo.lock binary
